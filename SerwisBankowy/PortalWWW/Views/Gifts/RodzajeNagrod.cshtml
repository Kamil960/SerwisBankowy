@model IEnumerable<BankData.Data.CMS.ListaNagrod>
<div class="container bg-light">
	<div class="d-flex justify-content-end">
		<nav class="navbar navbar-expand-lg navbar-light bg-light">
			<div class="container-fluid">
				<div class="collapse navbar-collapse" id="navbarNavDropdown">
					<ul class="navbar-nav">
						@foreach (var item in Model)
						{
							@if (item.Pozycja == 1)
							{
								<li class="nav-item">
									<a class="nav-link" aria-current="page" href="@Url.Action("Index", "Gifts")">@item.Nazwa</a>
								</li>
							}
							else if (item.Pozycja == 2)
							{
								<li class="nav-item">
									<a class="nav-link" href="@Url.Action(@item.Nazwa, "Gifts")">@item.Nazwa</a>
								</li>
							}
							else if (item.Pozycja == 3)
							{
								<li class="nav-item dropdown">
									<a class="nav-link active" href="@Url.Action(@item.Nazwa, "Gifts")" aria-current="page">@item.Nazwa</a>
								</li>
							}
							else if (item.Pozycja == 4)
							{
								<li class="nav-item">
									<a class="nav-link  active" href="@Url.Action(@item.Nazwa, "Gifts")">@item.Nazwa</a>
								</li>
							}
						}
							<li>
									<a class="basket" href="@Url.Action("Koszyk", "Gifts")" >
										<img src="~/css/Image/basket.png"/>
									</a>
							</li>
					</ul>
				</div>
			</div>
		</nav>
	</div>
</div>
@if (ViewBag.Points != null)
{
	<p class="points">Twoje punkty: @ViewBag.Points </p>
}
