@model BankData.Data.CMS.Art3

@{
	ViewData["Title"] = "Edycja";
	<link rel="stylesheet" href="~/css/artEdit.css" asp-append-version="true" />
}

<h1>Edycja Trzeciego Artykułu Strony Głównej</h1>
<hr />

<div class="section-3">
	<form asp-action="Edit">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<input type="hidden" asp-for="IdArt3" />
		<p class="p-1">
			<label asp-for="Tytul" class="control-label"></label>
			<input asp-for="Tytul" class="form-control" />
			<span asp-validation-for="Tytul" class="text-danger"></span>
		</p>
		<div class="cont">
			<div class="cont-img">
				<textarea asp-for="Grafika" class="form-control-desc"></textarea>
				<span asp-validation-for="Grafika" class="text-danger"></span>
			</div>
			<div class="wr-cont">
				<p>
					<textarea asp-for="Tresc1" class="form-control-desc"></textarea>
					<span asp-validation-for="Tresc1" class="text-danger"></span>
				</p>
				<ol>
					<li>
						<input asp-for="PozGieldowa1" class="form-control" />
						<span asp-validation-for="PozGieldowa1" class="text-danger"></span>
					</li>
					<li>
						<input asp-for="PozGieldowa2" class="form-control" />
						<span asp-validation-for="PozGieldowa2" class="text-danger"></span>
					</li>
					<li>
						<input asp-for="PozGieldowa3" class="form-control" />
						<span asp-validation-for="PozGieldowa3" class="text-danger"></span>
					</li>
					<li>
						<input asp-for="PozGieldowa4" class="form-control" />
						<span asp-validation-for="PozGieldowa4" class="text-danger"></span>
					</li>
				</ol>
			</div>
			<p class="pl-cont">
				<textarea asp-for="Tresc2" class="form-control-desc"></textarea>
				<span asp-validation-for="Tresc2" class="text-danger"></span>
			</p>
			<p class="cr-title">
				<input asp-for="CrypTytul" class="form-control" />
				<span asp-validation-for="CrypTytul" class="text-danger"></span>
			</p>
			<div class="crypto">
				<div class="cr-card">
					<div class="cr-icon">
						<textarea asp-for="CrypIcon1" class="form-control-desc"></textarea>
						<span asp-validation-for="CrypIcon1" class="text-danger"></span>
					</div>
					<p>
						<input asp-for="Crypto1" class="form-control" />
						<span asp-validation-for="Crypto1" class="text-danger"></span>
					</p>
				</div>
				<div class="cr-card">
					<div class="cr-icon">
						<textarea asp-for="CrypIcon2" class="form-control-desc"></textarea>
						<span asp-validation-for="CrypIcon2" class="text-danger"></span>
					</div>
					<p>
						<input asp-for="Crypto2" class="form-control" />
						<span asp-validation-for="Crypto2" class="text-danger"></span>
					</p>
				</div>
				<div class="cr-card">
					<div class="cr-icon">
						<textarea asp-for="CrypIcon3" class="form-control-desc"></textarea>
						<span asp-validation-for="CrypIcon3" class="text-danger"></span>
					</div>
					<p>
						<input asp-for="Crypto3" class="form-control" />
						<span asp-validation-for="Crypto3" class="text-danger"></span>
					</p>
				</div>
				<div class="cr-card">
					<div class="cr-icon">
						<textarea asp-for="CrypIcon4" class="form-control-desc"></textarea>
						<span asp-validation-for="CrypIcon4" class="text-danger"></span>
					</div>
					<p>
						<input asp-for="Crypto4" class="form-control" />
						<span asp-validation-for="Crypto4" class="text-danger"></span>
					</p>
				</div>
			</div>
			<div class="form-group-btn">
				<input type="submit" value="Edytuj" class="button" />
				<a class="button" asp-action="Index">Powrót</a>
			</div>
		</div>

	</form>
</div>


@section Scripts {
    @{
	await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
