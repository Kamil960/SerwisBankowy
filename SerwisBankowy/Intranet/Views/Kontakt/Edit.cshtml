@model BankData.Data.CMS.Kontakt

@{
	ViewData["Title"] = "Edycja";
	<link rel="stylesheet" href="~/css/contactEdit.css" asp-append-version="true"/>
	<link rel="stylesheet" href="~/css/edit-btn-style.css" asp-append-version="true"/>
}

<h1>Edycja Strony Kontaktowej</h1>

<hr />

<div class="field1">
	<form asp-action="Edit">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<input type="hidden" asp-for="IdKontakt" />
		<h2 class="title">
			<label class="control-label">@Model.Tytul</label>
		</h2>
		<div class="cloud1">
			<h3 class="cloudname">
				<label class="control-label">@Model.Opis1</label>
			</h3>
			<p class="content1">
				<input asp-for="Adres" class="form-control" />
				<span asp-validation-for="Adres" class="text-danger"></span>
			</p>
		</div>

		<div class="cloud2">
			<h3 class="cloudname cloudname2">Telefon</h3>
			<p class="content2">
				<label class="control-label">@Model.Opis3</label>
				<input asp-for="NrTelefonuSt" class="form-control" />
				<span asp-validation-for="NrTelefonuSt" class="text-danger"></span>
			</p>
			<p class="content2">
				<label class="control-label">@Model.Opis2</label>
				<input asp-for="NrTelefonuKom" class="form-control" />
				<span asp-validation-for="NrTelefonuKom" class="text-danger"></span>
			</p>
		</div>

		<div class="cloud3">
			<h3 class="cloudname">
				<label class="control-label">@Model.Opis4</label>
			</h3>
			<p class="content3">
				<input asp-for="Email" class="form-control" />
				<span asp-validation-for="Email" class="text-danger"></span>
			</p>
		</div>
		<div class="form-group-btn">
			<input type="submit" value="Edytuj" class="button" />
			<a class="button" asp-action="Index">Powrót</a>
		</div>
	</form>
</div>


@section Scripts {
    @{
	await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
